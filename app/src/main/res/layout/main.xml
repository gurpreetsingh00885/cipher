<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/activity_bg"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
            android:id="@+id/edittext1"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginTop="0dp"
            android:background="#FFFFFF"
            android:hint="Input"
            android:layout_weight="1"
            android:padding="8dp"
            android:textColor="#000000"
            android:textColorHint="#D3D3D3"
            android:textSize="12sp" />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:gravity='center_vertical'>

                <ImageView
                    android:id="@+id/imageView_copy"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="copyOutput"
                    android:background="@drawable/button_copy" />
                <ImageView
                    android:id="@+id/imageView_paste"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="pasteImput"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_paste" />
                <ImageView
                    android:id="@+id/imageView_clear"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="clearAll"
                    android:background="@drawable/button_clear" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <Button
                android:layout_margin="7dp"
                android:id="@+id/button2"

                android:text="Cipher"
                android:textAllCaps="false"
                android:textColor="@drawable/text"
                android:textSize="20sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_weight = "1"
                />


            <Button
                android:id="@+id/button3"
                android:layout_margin="7dp"
                android:text="Decipher"
                android:textAllCaps="false"
                android:textColor="@drawable/text"
                android:textSize="20sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:layout_weight = "1"
                android:shadowRadius="5"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/edittext2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFFFFF"
            android:enabled="true"
            android:hint="Output"
            android:padding="8dp"
            android:textColor="#000000"
            android:textColorHint="#D3D3D3"
            android:textSize="12sp" />
    </LinearLayout>
</FrameLayout>
