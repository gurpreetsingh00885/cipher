<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="bottom">
	<ScrollView
		android:layout_height="400dp"
		android:layout_weight="1.0"
		android:layout_width="match_parent"
		android:id="@+id/scroll1">

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:baselineAligned="true"
				android:minHeight="50dp"
				android:minWidth="150dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="10dp"
				android:paddingRight="10dp">

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="Ciphertext is encrypted text. This app can be used to create ciphertext from plaintext. That is, you can convert simple text into coded/encrypted text which isn't human readable to some degree. This app was designed to generate multiple ciphers for the same text. So if you don't like a cipher just generate another on the go."
					android:gravity="fill_horizontal"
					android:textSize="12sp"
					android:layout_marginTop="10dp"/>
				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="BACK button will minimize the app and start the OVERLAY service."
					android:textSize="11sp"
					android:textColor="#0F0FFF"
					android:layout_marginTop="10dp"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:text="Ciphertext generated by this app can only be deciphered by this app itself. (at least at the moment)"
					android:textSize="11sp"
					android:textColor="#FF0F00"
					android:layout_marginTop="10dp"/>
				
                
				

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="Here is some help on the interface."
					android:layout_marginTop="10dp"/>

				<ImageView
					android:id="@+id/imageView1"
					android:layout_width="wrap_content"
					android:layout_height="250dp"
					android:src="@drawable/help"
					android:layout_marginTop="10dp"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="1. Input text box. Your input plaintext or ciphertext goes here."
					android:layout_marginTop="10dp"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="2. Output text box. Output ciphertext or plaintext goes here after processing input."/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="3. CIPHER button. This button is used to convert input plaintext to ciphertext, display it and copy it to clipboard."/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="4. CLEAR button. Clears both the input and output text boxes."/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="5. DECIPHER button. This button is used to convert input ciphertext to plaintext, display it and copy it to the clipboard."/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="6. HELP button. This button launches this dialog."/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="7. PASTE button. Pastes text from the clipboard (that you already copied from somewhere) into the input textbox ready to be ciphered or deciphered."/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="8. EXIT button. Closes the app."/>
				

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="This app was created by Gurpreet Singh."
					android:layout_marginTop="10dp"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="For feedback, support and bugreports contact:"/>

				<TextView
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					android:text="gurpreetsingh00885@gmail.com"
					android:textIsSelectable="true"
					android:textColor="#005EFA"/>
                
		        
			</LinearLayout>
	</ScrollView>
		<Button
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="OK"
			android:id="@+id/dialogButton"
			android:layout_below="@id/scroll1"/>
</RelativeLayout>

